<form role="form" action="posts_app/sign_up" method="post" >
 <div class="form-group">
   Email:
   <input type="text" name="email">
 </div>
 <div class="form-group">
   Name:
   <input type="text" name="name">
 </div>
 <div class="form-group">
  Password:
  <input type="password" name="password" >
</div>
<%= button_to("post", "Sign up") %>
</form>

<form role="form" action="posts_app/login" method="post" >
