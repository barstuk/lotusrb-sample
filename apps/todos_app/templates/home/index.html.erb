<h1 style="text-align: center;">Welcome to Lotus Todo App!</h1>

<% if signed_in %>
<%= render partial: "logged" %>
<br><br><br><br>
<div class="row">
  <div class="col-md-4">
    <% if todos_todo.any? %>
    <p style="text-align: center; font-size: 20px">Todo:</p>
    <% todos_todo.each do |todo| %>
    <form role="form" action="todos_app/todos/<%= todo.id %>" method="post" >
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= todo.name %> <%= "(#{todo.category})" unless todo.category.empty? %>
      </div>
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= button_to("post", "Mark as Done") %>
      </div>
    </form>
    <% end %>
    <% end %>
  </div>

  <div class="col-md-4">
    <% if todos_done.any? %>
    <p style="text-align: center; font-size: 20px">Done:</p>
    <% todos_done.each do |todo| %>
    <form role="form" action="todos_app/todos/<%= todo.id %>" method="post" >
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= todo.name %> <%= "(#{todo.category})" unless todo.category.empty? %>
      </div>
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= button_to("post", "Mark as Undone") %>
      </div>
    </form>
    <br>
    <% end %>
    <% end %>
  </div>
  <div class="col-md-4">
    <form role="form" action="todos_app" method="post" >
     <div class="form-group">
       Name:
       <input type="text" name="name">
     </div>
     <div class="form-group">
       Category:
       <input type="text" name="category">
     </div>
     <%= button_to("post", "Create new Todo") %>
   </form>
 </div>
</div>
<% else %>
<%= render partial: "session" %>
<% end %>