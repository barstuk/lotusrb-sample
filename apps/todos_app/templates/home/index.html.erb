<h1 style="text-align: center;">Welcome to Lotus Todo App!</h1>

<% if signed_in %>
<div class="row">
  <div class="col-md-4">
    <p style="text-align: center; font-size: 20px">Todo:</p>
    <% todos_todo.each do |todo| %>
    <form role="form" action="todos_app/<%= todo.id %>" method="post" >
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= todo.name %> <%= "(#{todo.category})" unless todo.category.empty? %>
      </div>
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= button_to("post", "Mark as Done") %>
      </div>
    </form>
    <% end %>
  </div>

  <div class="col-md-4">
    <p style="text-align: center; font-size: 20px">Done:</p>
    <% todos_done.each do |todo| %>
    <form role="form" action="todos_app/<%= todo.id %>" method="post" >
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= todo.name %> <%= "(#{todo.category})" unless todo.category.empty? %>
      </div>
      <div class="col-md-6" style="margin-bottom: 5px;">
        <%= button_to("post", "Mark as Undone") %>
      </div>
    </form>
    <br>
    <% end %>
  </div>
  <div class="col-md-4">
    <form role="form" action="todos_app" method="post" >
     <div class="form-group">
       Name:
       <input type="text" name="name">
     </div>
     <div class="form-group">
       Category:
       <input type="text" name="category">
     </div>
     <%= button_to("post", "Create new Todo") %>
   </form>
 </div>
</div>

<% else %>
<form role="form" action="todos_app/sign_up" method="post" >
 <div class="form-group">
   Email:
   <input type="text" name="email">
 </div>
 <div class="form-group">
   Name:
   <input type="text" name="name">
 </div>
 <div class="form-group">
  Password:
  <input type="password" name="password" >
</div>
<%= button_to("post", "Sign up") %>
</form>


<form role="form" action="todos_app/login" method="post" >
 <div class="form-group">
   Email:
   <input type="text" name="email">
 </div>
 <div class="form-group">
  Password:
  <input type="password" name="password" >
</div>
<%= button_to("post", "Log in") %>
</form>
<% end %>